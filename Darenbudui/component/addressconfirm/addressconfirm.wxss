/* component/addressconfirm/addressconfirm.wxss */

.mask-container {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}
/* 蒙层 */
.model-mask {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
}

/* 核心 */
.model-dialog {
 position: absolute;
  /* left: 50%; */
  top: 200rpx;
  left: 48rpx;
  right: 48rpx;

  /* width: 80%; */
  /* max-width: 600rpx; */
  border: 2rpx solid #ccc;
  border-radius: 30rpx;
  box-sizing: bordre-box;
  /* transform: translate(-50%, -50%);  */
  overflow: hidden;
  background: #fff;
}

/* 顶部X按钮 */
.top {
  margin-top: 32rpx;
  width: 100%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.top .cancle {
  margin-right: 32rpx;
  width: 30rpx;
  height: 30rpx;
}

/* 地址信息 */
.top-core {
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  padding-left: 32rpx;
  padding-right: 32rpx;
  flex-direction: column;
}
.top-core .line {
  height: 2rpx;
  background-color: #f5f5f5;
  width: 100%;
  box-sizing: border-box;
  margin-top: 16rpx;
}
.top-core .title {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.top-core .title  .note-title {
  font-size: 26rpx;
  color: #f17846;
}
.top-core .title image {
  margin-right: 16rpx;
}
.top-core .address-info {
  display: flex;
  justify-content: space-around;
  align-items: flex-start;
  flex-direction: column;
  font-size: 26rpx;
  margin-top: 32rpx;
}
.top-core .address-info .addressinfo-item {
  margin-bottom: 16rpx;
}
.title image {
  width: 34rpx;
  height: 34rpx;
}

.top-core .phoneInput {
  margin-top: 70rpx;
  border-radius: 10rpx;
  border: 1px solid #efeeef;
  font-size: 28rpx ;
  width: 100%;
  box-sizing: border-box;
  height: 70rpx;
}

/* 底部core */
.core {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: column;
  padding: 32rpx;
  box-sizing: border-box;
}

.core .money-title {
  color: #fba42f;
  font-size: 30rpx;
  margin-top: 100rpx;
  margin-bottom: 100rpx;
}
.core  .addbutton {
  width: 90%;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 50rpx;
  background: linear-gradient(to right,#5fef3f,#00ae17);
  text-align: center;
  color: white;
  font-size: 30rpx;
}
.core .click-cancle {
  margin-top: 32rpx;
  width: 90%;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 50rpx;
  background: white;
  text-align: center;
  color: #00ae17;
  border: 1px solid #51b257;
  font-size: 30rpx;
}