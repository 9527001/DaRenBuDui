/* component/signinsuccess/signinsuccess.wxss */
.mask-container {
  position: fixed;
  z-index: 1;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.5);
}

.model-mask {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.model-dialog {
  position: absolute;
  left: 48rpx;
  right: 48rpx;
  top: 300rpx;
  background-color: white;
  border-radius: 20rpx;
  /* height: 500rpx; */
}

.title-bg {
  position: absolute;
  top: 0rpx;
  width: 100%;
  height: 170rpx;
}

.title-view {
  position: absolute;
  top: 0rpx;
  width: 100%;
  height: 170rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  
}

.model-title {
  font-size: 50rpx;
  color: white;
  text-align: center;
}
.model-detailtitle {

  font-size: 26rpx;
  color: white;
  text-align: center;
}

.extra {
  position: absolute;
  top: 170rpx;
  width: 100%;
  height: 500rpx;
  background-color: white;
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-direction: row;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  
}
.extra .item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: column;
}

.extra .item .icon {
  width: 150rpx;
  height: 206rpx;
  margin-bottom: 20rpx;

}
.extra .item .item-content {
  font-size: 50rpx;

}

.extra .item .item-title {
  font-size: 24rpx;
  
}



