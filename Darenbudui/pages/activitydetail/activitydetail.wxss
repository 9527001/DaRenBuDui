/* pages/activitydetail/activitydetail.wxss */

page {
  height: 100%;
  background-color: #f5f5f5;
}
.main {
  height: 100%;
  margin: 32rpx;
  box-sizing: border-box;
}
.top {
  width: 100%;
}
.top .coreItem {
  box-sizing: border-box;
  position: relative;
  margin-bottom: 20rpx;
  /* box-shadow: 1px 1px 2px 2px #e3dde4; */
  /* background-color: white; */
}

.coreItem .goodimage {
  width: 100%;
  height: 400rpx;
  background-color: green;
  box-shadow: 1px 1px 2px 2px #e3dde4;
  border-radius: 10rpx;
}
.coreItem .share {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 16rpx;
  top: 375rpx;
  background-color: #39c400;
  border-radius: 25rpx;
}

.coreItem .status {
  position: absolute;
  top: 16rpx;
  left: 0rpx;
  width: 96rpx;
  height: 41rpx;
}
.status image {
  width: 100%;
  height: 100%;

}
.status text {
  height: 41rpx;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  font-size: 24rpx;
  color: white;
  text-align: center;
  width: 96rpx;
  line-height: 41rpx;
}

.coreItem .footer {
   display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  flex-direction: column;
  padding: 16rpx 16rpx 32rpx 16rpx;
}
 
.footer .name {
  font-size: 30rpx;
  margin-bottom: 16rpx;
}
.footer .bottom {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  
}
.bottom .bottom-poeple {
  font-size: 24rpx;
  color: #7c767d;
}
.bottom .footer-right-people {
  font-size: 24rpx;
  color: #7c767d;
}
