/* pages/activitylist/activitylist.wxss */

page {
  height: 100%;
  background-color: #f5f5f5;
}
.main {
  height: 100%;
}
.content {
  height: 100%;
  margin: 16rpx;
  box-sizing: border-box;
}
.coreItem {
  box-sizing: border-box;
  position: relative;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: 1px 1px 2px 2px #e3dde4;
  background-color: white;
}

.coreItem .goodimage {
  width: 100%;
  height: 400rpx;
  background-color: gray;
}

.coreItem .status {
  position: absolute;
  top: 16rpx;
  left: 0rpx;
  width: 96rpx;
  height: 41rpx;
}
.status image {
  width: 100%;
  height: 100%;

}
.status text {
  height: 41rpx;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  font-size: 24rpx;
  color: white;
  text-align: center;
  width: 96rpx;
  line-height: 41rpx;
}

.coreItem .footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 16rpx 32rpx 16rpx;
}

.footer .info {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  flex-direction: column;
}
.info .name {
  font-size: 30rpx;
  margin-bottom: 16rpx;
}
.info .info-poeple {
  font-size: 24rpx;
  color: #7c767d;
}

.footer .footer-right {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: column;
  
}

.footer-right .footer-right-top {
  width: 160rpx;
  height: 50rpx;
  background-color: #39c300;
  line-height: 50rpx;
  text-align: center;
  border-radius: 25rpx;
  color: white;
  font-size: 28rpx;
  margin-bottom: 16rpx;
}

.footer-right .footer-right-top-joined {
  width: 160rpx;
  height: 50rpx;
  background-color: #dcdcdc;
  line-height: 50rpx;
  text-align: center;
  border-radius: 25rpx;
  color: white;
  font-size: 28rpx;
  margin-bottom: 16rpx;

}
.footer-right .footer-right-poeple {
  font-size: 24rpx;
}
