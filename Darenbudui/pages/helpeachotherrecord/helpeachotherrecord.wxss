/* pages/helpeachotherrecord/helpeachotherrecord.wxss */

page {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
}

.main {
  width: 100%;
  height: 100%;
}

.top {
  height: 80rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: #00a262;
  font-size: 28rpx;
  color: white;
  /* padding: 0rpx 32rpx; */
}

.record {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: column;

}

.record .item {
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: white;
  font-size: 28rpx;
  margin-bottom: 2rpx;
  color: #000c1e;
  padding: 0rpx 32rpx;
  box-sizing: border-box;
  
}
