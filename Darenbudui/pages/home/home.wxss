/* pages/home/home.wxss */
@import "../../pages/exchange/exchange.wxss";

/* 顶部 */
.top {
  position: relative;
  width: 100%;
  height: 677rpx;
  background-color: green;
}

.top-bg {
  position: absolute;
  width: 100%;
  height: 677rpx;
}

/* 达人步数 */
.all-step {
  position: absolute;
  left: 20rpx;
  top: 20rpx;
  width: 226rpx;
  height: 95rpx;
}
.all-step image {
  width: 100%;
  height: 100%;
}
.all-step text {
  position: absolute;
  bottom: 10rpx;
  right: 30rpx;
  font-size: 35rpx;
  color: white;
}
/* 今日步数 */
.today-step {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  width: 233rpx;
  height: 111rpx;
}
.today-step image {
  width: 100%;
  height: 100%;
}
.today-step text {
  position: absolute;
  bottom: 15rpx;
  left: 40rpx;
  font-size: 35rpx;
  color: white;
}
/* 气泡 */
.new-step {

  position: absolute;
  top: 45%;
  left: 50%;
  margin-left: -48rpx;
  margin-top: -48rpx;
  width: 96rpx;
  height: 96rpx;
}
.new-step image {
  width: 100%;
  height: 100%;
}
.new-step text {
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -20rpx;
  margin-top: -20rpx;
  font-size: 23rpx;
  color: white;
}


.top-people {
  position: absolute;
  left: 50%;
  margin-left: -110.5rpx;
  bottom: 30rpx;
  width: 221rpx;
  height: 302rpx;
}

/* 更多功能 */

.more {
  width: 100%;
  height: 200rpx;
  background-color: white;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.more-item {
  width: 139rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  /* background: green; */
}

.more-item image {
  width: 138rpx;
  height: 138rpx;
}

.more-item text {
  font-size: 20rpx;
  color: black;
  text-align: center;
}

/* banner */

.banner {
  width: 100%;
  height: 300rpx;
  /* background-color: blue; */
  box-sizing: border-box;
}

.banner swiper {
  height: 100%;
}

swiper-item {
  text-align: center;
  width: 100%;
  height: 100%;
}

.slide-image {
  width: 93%;
  height: 260rpx;
  margin-top: 20rpx;
  border-radius: 10rpx;
}

.title {
  width: 100%;
  height: 150rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f5f5f5;
}

.title image {
  width: 257rpx;
  height: 73rpx;
}

/* 列表 */
.product {
  width: 100%;
  background-color: green;
}
