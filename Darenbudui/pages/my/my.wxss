/* pages/my/my.wxss */

page {
  height: 100%;
  background-color: #f5f5f5;
}
.scroll-view {
  height: 100%;
  background-color: #f5f5f5;
}

.my {
  background-color: #f5f5f5;
}

.top {
  width: 100%;
  height: 350rpx;
  position: relative;
  color: white;
  text-align: center;
}

.top .top-bg {
  width: 100%;
  height: 100%;
}

.top .name {
  position: absolute;
  left: 50rpx;
  top: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  /* height: 100rpx; */
}

.top .name .nickname {
  font-size: 50rpx;
  color: white;
  text-align: center;
}

.top .name .phone::after {
  border: none;
  border-radius: 0;
}
.top .name .phone {
  font-size: 25rpx;
  color: white;
  text-align: center; 
  background-color:rgba(0, 0, 0, 0);
  height: 50rpx;
}



.top .icon {
  position: absolute;
  right: 50rpx;
  top: 50%;
  margin-top: -120rpx;
  width: 180rpx;
  height: 180rpx;
  border-radius: 90rpx;
  padding: 0;
}
.icon-content {
  width: 180rpx;
  height: 180rpx;
}

.top .data {
  position: absolute;
  left: 50rpx;
  bottom: 50rpx;
  display: flex;
  justify-content: space-between;
  /* align-items: center; */
}

.top .data .money {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  flex-direction: column;
  margin-right: 40rpx;

}

.top .data .money .money-data {
  font-size: 45rpx;
}

.top .data .money .money-title {
  font-size: 25rpx;
}

/* 标签 */

.items {
  /* width: 100%; */
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  /* padding: 20rpx; */
  text-align: center;
  padding: 40rpx 10rpx 10rpx 10rpx;
  background-color: white;
}

.items .item {
  width: 180rpx;
  /* height: 200rpx; */
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  background-color: white;
}

.items .item::after {
  border: none;
  border-radius: 0;
}

.items .item image {
  width: 70rpx;
  height: 70rpx;
  margin-bottom: 10rpx;
}

.items .item text {
  font-size: 30rpx;
  color: black;
  margin-bottom: 50rpx;
}

/* 设置列表 */

.setting {
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  background-color: white;
}

.setting .setttingItem {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
}

.setting .setttingItem .left {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-left: 20rpx;
}

.setting .setttingItem .left image {
  width: 36rpx;
  height: 36rpx;
}

.setting .setttingItem .left text {
  font-size: 30rpx;
}

.setting .setttingItem image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
}
