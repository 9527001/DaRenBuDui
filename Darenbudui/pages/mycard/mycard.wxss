/* pages/mycard/mycard.wxss */

page {
  height: 100%;
  background-color: #f5f5f5;
}
.scroll-view {
  height: 1000rpx;
  background-color: white;
}

.main {
  position: relative;
  width: 100%;
  height: 100%;
  /* background-color: red; */
}

.goldcard {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin: 0rpx,32rpx;
  background-color: white;
}

.goldcard .goldcardItem {
  width: 160rpx;
  height: 225rpx;
  position: relative;
  /* background-color: green; */
}

.goldcardItem image {
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  margin-right: 10rpx;
  width: 90%;
  height: 90%;
}

.cover-layer{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(255, 255, 255, 0.5);
  
}

.goldcardItem text {
  font-size: 20rpx;
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  border-radius: 15rpx;
  background-color: red;
  color: white;
  position: absolute;
  right: 0rpx;
  top: 15rpx;
  text-align: center;
}

.silvercard {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin: 0rpx ,32rpx;
  background-color: white;
}

.silvercardItem {
  width: 100rpx;
  height: 160rpx;
  position: relative;
  /* background-color: green; */
}

.silvercardItem image {
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  margin-right: 10rpx;
  width: 90%;
  height: 90%;
}

.silvercardItem text {
  font-size: 20rpx;
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  border-radius: 15rpx;
  background-color: red;
  color: white;
  position: absolute;
  right: 0rpx;
  top: 15rpx;
  text-align: center;
}

.footer {
  width: 100%;
  height: 200rpx;
  display: flex;
  justify-content: space-around;
  background-color: white;
  align-items: center;
  text-align: center;
  font-size: 36rpx;
}
.footer .card {
  width: 330rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #ea9623;
  border: 2rpx solid #ea9623;
  border-radius: 40rpx;
}
.footer .exchangeMoney {

  width: 330rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: white;
  background-color: #ea9623;
  border-radius: 40rpx;
} 

.note {
  width: 100%;
  /* height: 1600rpx; */
  margin-top: 32rpx;
  margin-left: 32rpx;
  font-size: 20rpx bold;
}

.note_content {  
  width: 100%;
  box-sizing: border-box;
  /* padding: 32rpx; */
  margin-left: 32rpx;
  margin-right: 32rpx;
  color: #6f6970;
  

}
.note_content_text {
  font-size: 24rpx;
}

.note_note {
  width: 100%;
  padding: 16rpx 32rpx;
  color: red;
  font-size: 26rpx;
  box-sizing: border-box;
}