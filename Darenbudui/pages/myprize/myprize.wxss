/* pages/myprize/myprize.wxss */

page {
  height: 100%;
  background-color: #f5f5f5;
}
.main {
  width: 100%;
  height: 100%;

}

.item {
  height: 100%;
  padding: 32rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
  /* width: 100%; */
}

.coreItem {
  
  background-color: white;
  box-shadow: 1px 1px 1px 1px #e8e3e9;
  margin-bottom: 20rpx;
  margin-left: 32rpx;
  margin-right: 32rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
}
.item-top {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding-left: 32rpx;
  padding: 16rpx 32rpx;
  /* height: 70rpx; */
}
.item-top image {
  width: 32rpx;
  height: 32rpx;
}
.item-top text {
  color: #1fd200;
  font-size: 28rpx;
}

.line {
  width: 100%;
  height: 2rpx;
  background-color: #f5f5f5;
}

.item-middle {
  padding: 32rpx 16rpx;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
}

.item-middle .middle-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
}
.item-middle .middle-content {

  margin-left: 16rpx;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  flex-direction: column;
} 
.middle-content .content-title {
  font-size: 28rpx;

}
.middle-content .content-num {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #a29ca3;
}

/* 无数据 */
.no-data {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f5f5f5;
  flex-direction: column;

}
.no-data image {
  width: 500rpx;
  height: 327rpx;
  margin-top: 300rpx;
}
.no-data text {
  font-size: 24rpx;
  color: #918b92;
}