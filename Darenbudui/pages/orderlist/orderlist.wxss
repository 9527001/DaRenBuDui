/* pages/orderlist/orderlist.wxss */

page {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
}

.main {
  width: 100%;
  height: 100%;
}

.core {
  width: 100%;
  height: 100%;
}

/* item的布局 */

.coreItem {
  width: 100%;
  margin-bottom: 20rpx;
  background-color: white;
}

.coreItem .item-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0rpx 32rpx;
  color: #979298;
  font-size: 26rpx;
  margin-bottom: 2rpx;
  background-color: white;
  height: 80rpx;
}

.coreItem .item-middle {
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  padding: 16px 32rpx;
  background-color: white;
  box-sizing: border-box;
}

.item-middle .middle-image {
  width: 200rpx;
  height: 200rpx;
  margin-right: 48rpx;
  border: 2px solid #979298;
}

.middle-content {
  margin-top: 0rpx;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  flex-direction: column;
}

.middle-content .content-title {
  font-size: 28rpx;
  margin-bottom: 16rpx;
}

.middle-content .content-num {
  font-size: 24rpx;
  color: #979298;
}

.address {
  
  margin-left: 32rpx;
  margin-right: 32rpx;
  font-size: 24rpx;
  padding: 16rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
}

.space {
  width: 100%;
  height: 32rpx;
}
