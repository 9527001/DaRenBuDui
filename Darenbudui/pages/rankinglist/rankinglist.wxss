/* pages/rankinglist/rankinglist.wxss */

.main {
  width: 100%;
  height: 100%;
  background-color: #fffad8;
  position: relative;
}
.main .bg {
  position: absolute;
  width: 100%;
  height: 1207rpx;
}
.main .main-core {
  width: 100%;
  /* height: 100%; */
}

/* 顶部 */
.top {
  top: 50rpx;
  left: 50%;
  margin-left: -365rpx;
  width: 730rpx;
  height: 260rpx;
  position: relative;
}

.top .top-bg {
  width: 100%;
  height: 100%;
}
.top .rule  {
  position: absolute;
  right: 16rpx;
  top: 32rpx;
  background-color: #885000;
  color: white;
  font-size: 25rpx;
  height: 50rpx;
  width: 160rpx;
  border-top-left-radius: 25rpx;
  border-bottom-left-radius: 25rpx;
  text-align: center;
  line-height: 50rpx;
}

.top .content {
  position: absolute;
  top: 100rpx;
  width: 100%;
  /* height: 100%; */
  display: flex;
  justify-content: flex-start;
  align-items: center;
  color: white;
} 

.top .content .ranking {
  font-size: 32rpx;
  margin-left: 32rpx;
}
.top .content .avtarurl {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  border: 2rpx solid white;
  margin-left: 8rpx;
}

.top .content .name {
  font-size: 32rpx;
  margin-left: 8rpx;
  margin-right: 48rpx;
}

/* 中部 */
.middle {
  position: relative;
  width: 100%;
  height: 520rpx;

  display: flex;
  justify-content: space-around;
  align-items: flex-end;
  margin-bottom: 80rpx;
  
}

.middle .gold {
  display: flex; 
  align-self: center;
}

 
.middle-core{
  display: flex;
  justify-content: flex-end;
  align-items: center;
  flex-direction: column;
}
.middle-core .hat {
  width: 101rpx;
  height: 60rpx;
}
.middle-core .icon {
   width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  margin-bottom: 16rpx;
}
.middle-core .name {
  font-size: 28rpx;
  color: black;
  margin-bottom: 16rpx;
}
.middle-core .money {
  font-size: 26rpx;
  background-color: white;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 25rpx;
  color: #ff8f00;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

/* 底部 */
.core {
  background-color: white;
  /* width: 100%; */
  margin-left: 16rpx;
  margin-right: 16rpx;
  border-radius: 20rpx;
  box-shadow: 1px 1px 2px 2px #f5f5f5;

}

.core .item {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.core .item .left {
  margin-left: 32rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 30rpx;
}

.core .item .left .avtarurl {
  margin-left: 30rpx;
  margin-right: 30rpx;
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
}

.core .item .money {
  margin-right: 32rpx;
  color: #ffa845;
  font-size: 28rpx;
}
