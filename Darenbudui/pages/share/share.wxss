/* pages/share/share.wxss */

page {
  height: 100%;
}

.main {
  width: 100%;
  height: 100%;
  background-color: #51d33c;
  position: relative;
}

.banner {
  position: relative;
  width: 100%;
  height: 100%;
}

.banner .swiper-item {
  width: 100%;
  height: 100%;
  position: relative;
}

.banner .swiper-item .slide-image {
  width: 100%;
  height: 100%;
}

.banner .swiper-item .content {
  position: absolute;
  bottom: 160rpx;
  margin-left: 48rpx;
  margin-right: 48rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background-color: white;
  border-radius: 20rpx;
  /* padding: 20rpx; */
  padding-top: 48rpx;
  padding-bottom: 48rpx;
  padding-left: 32rpx;
  padding-right: 32rpx;
}

.content .icon {
  width: 140rpx;
  height: 140rpx;
}

.content .text {
  margin-left: 16rpx;
  display: flex;
  justify-content: flex-start;
  flex-direction: column;
  font-size: 24rpx;
}

.content .text .name {
  font-size: 24rpx;
}

.content .text .appname {
  font-size: 20rpx;
  color: #a5a0a6;
}

.content .linkimage {
  width: 140rpx;
  height: 140rpx;
  margin-left: 50rpx;
  margin-right: 0rpx;
}

/* 底部 */

.bottom {
  position: fixed;
  width: 100%;
  bottom: 48rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 28rpx;
}

.bottom .save {
  width: 350rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  border-radius: 50rpx;
  color: #00ffae;
  background-color: white;
}

.bottom .share {
  width: 350rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  border-radius: 40rpx;
  color: white;
  background: linear-gradient(to right, #51d33c, #00b018);
}
