/* pages/sharesteps/sharestep.wxss */
@import "../../pages/exchange/exchange.wxss";

page {
  height: 100%;
  background-color: #f5f5f5;
}

.main {
  height: 100%;
  position: relative;
}


.main .bg {
  width: 100%;
  height: 1206rpx;
}

.main .top {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
}

.top .share {
  position: relative;
  /* top: 32rpx; */
  margin-top: 32rpx;
  /* right: 32rpx; */
  margin-left: 32rpx;
  margin-right: 32rpx;
  /* width: 100%; */
  box-sizing: border-box;
  background: rgba(265, 256, 256, 0.5);
  border-radius: 10rpx;
}

.share .doublepeople {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.doublepeople .one {
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-direction: column;
}

.one image {
  margin-top: 60rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
}

.one .one_notes {
  margin-top: 8rpx;
  color: #938e91;
  font-size: 24rpx;
}

.one .step {
  color: #00a364;
  font-size: 50rpx;
}

.share .line {
  position: relative;
  margin-top: 48rpx;
  height: 2rpx;
  margin-left: 32rpx;
  margin-right: 32rpx;
  box-sizing: border-box;
  background-color: #d4cfd3;

}
.share .share-bottom {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: column;
}
.share-bottom .share-step-input {

  display: flex;
  justify-content: center;
  align-items: flex-end;
}

.share-step-input text {
  font-size: 26rpx;
  color: #00a364;
}
.share-step-input input {
  margin-top: 60rpx;
  width: 200rpx;
  margin-left: 8rpx;
  margin-right: 8rpx;
  border-bottom: 2rpx solid #d4cfd3;
  text-align: center;
  font-size: 50rpx;
   
}

.share-bottom .sharesteplimitnotes {
  margin-top: 16rpx;
  font-size: 22rpx;
  color: #938e91;
}
.share-bottom .shrare_confirm {
  margin-top: 32rpx;
  font-size: 30rpx;
  color: white;
  width: 80%;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 50rpx;
  background: linear-gradient(to right,#67ee46,#00ae17);
  text-align: center;
  margin-bottom: 60rpx;
}

/* 推荐商品 */
.top .goods {
  position: relative;
  margin-top: 16rpx;
  width: 100%;
}

.goods .list {
  padding-top: 0rpx;
  background: rgba(0, 0, 0, 0);
}
