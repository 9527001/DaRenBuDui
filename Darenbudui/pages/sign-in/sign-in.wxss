/* pages/sign-in/sign-in.wxss */

.sign-in {
  position: fixed;
  height: 100%;
  width: 100%;
  background-color: green;
}

.bg-image {
  width: 100%;
  height: 100%;
}

/* 签到规则 */

.rule {
  position: absolute;
  right: 0rpx;
  top: 32rpx;
  background-color: #a8b1cb;
  color: white;
  font-size: 25rpx;
  height: 50rpx;
  width: 160rpx;
  border-top-left-radius: 25rpx;
  border-bottom-left-radius: 25rpx;
  text-align: center;
  line-height: 50rpx;
}

/* 补签 */

.signed-supplement {
  position: absolute;
  top: 100rpx;
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  color: #f89f26;
  font-size: 25rpx;
}

.status {
  width: 100%;
  position: absolute;
  top: 160rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.status .status-label {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  margin-left: 32rpx;
  margin-right: 32rpx;
}

.status-label .number {
  font-size: 50rpx;
  color: #f89f26;
}

.status-label .note {
  font-size: 20rpx;
}

.sign-in-button {
  font-size: 50rpx;
  /* 选中的颜色 */
  color: #a8a5a9;
  background-color: #e4e1e5;
  width: 400rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  border-radius: 50rpx;
}

/* 日历 */

.calendar {
  position: absolute;
  top: 300rpx;
  width: 100%;
  height: 200rpx;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  padding: 16rpx;
}

.calendarItem {
  width: 82rpx;
  height: 82rpx;
  margin-left: 8rpx;
  margin-right: 8rpx;
  margin-bottom: 32rpx;
}

.calendarItem .normal {
  width: 100%;
  height: 100%;
  border-radius: 41rpx;
  border: 2rpx dashed #a7a8a8;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.calendarItem .normal text {
  margin-top: 8rpx;
}

.calendarItem .bu {
  width: 100%;
  height: 100%;
  border-radius: 41rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.calendarItem .bu image {
  width: 100%;
  height: 100%;
}

.calendarItem .signed {
  width: 100%;
  height: 100%;
  border-radius: 41rpx;
  position: relative;
}

.calendarItem .signed image {
  width: 100%;
  height: 100%;
}

.calendarItem .signed .signed-content {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: white;
}
.calendarItem .signed .signed-content text {
  margin-top: 8rpx;
}
 
.calendarItem .signed .signed-content image {
  width: 27rpx;
  height: 22rpx;
  margin-bottom: 8rpx;
}

/* 跳转卡牌 */

.card {
  position: absolute;
  top: 600rpx;
  width: 690rpx;
  height: 170rpx;
  left: 50%;
  margin-left: -345rpx;
}

.bg-image-bottom {
  width: 100%;
  height: 667rpx;
  position: absolute;
  bottom: 0rpx;
  left: 0rpx;
}
